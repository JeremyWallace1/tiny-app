<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style="display: block; width: 100%">
        <a class="nav-item nav-link" href="/urls" style="display: inline-block; text-align: left; min-width: auto;">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new" style="display: inline-block; text-align: left; min-width: auto;">Create New URL</a>
      </div>
        <!-- create a form that POSTs to /login -->
        <!-- If the local (template) variable username is set/defined, display the username and a separate logout form which will POST to /logout. Otherwise, show the login form. -->
        <% if (username){ %>
          <div class="nav-item" style="display: inline-block; text-align: right; min-width: max-content; margin-right: 20px;">
            Logged in as: <%= username %>!
          </div>
          <div class="nav-item" style="display: inline-block; text-align: right; min-width: max-content;">
            <form method="POST" action="/logout">
              <button type="submit" style=" padding: 4px 13px; background-color: transparent; margin-right: 20px; border: 0.5mm solid rgb(0, 0, 0); color: rgb(0, 0, 0); border-radius: 5px;">Logout</button></form>
          </div>

      <% } else{ %>
        <form class="form-inline" action="/login" method="POST"> <!-- The action attribute tells the form which URL to submit to while the method attribute tells the form which HTTP method to use when submitting the form.-->
          <div class="form-group mb-2" style="display: inline-block; text-align: right; min-width: max-content;">
            <label for="username" style="display: inline-block; text-align: right; min-width: max-content;">Login</label>
            <!--The name attribute identifies the data we are sending-->
            <input
              class="form-control"
              type="text"
              name="username" 
              placeholder=""
              style="width: 300px; margin: 1em"
            />
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      <% } %>
    </div>
  </nav>

</header>