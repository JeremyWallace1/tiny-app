<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style="display: block; width: 100%">
        <a class="nav-item nav-link" href="/urls" style="display: inline-block; text-align: left; min-width: auto;">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new" style="display: inline-block; text-align: left; min-width: auto;">Create New URL</a>
      </div>
        <!-- create a form that POSTs to /login -->
        <% if (user_id){ %>
          <div class="nav-item" style="display: inline-block; text-align: right; min-width: max-content; margin-right: 20px;">
            Logged in as: <%= user_id.email %>!
          </div>
          <div class="nav-item" style="display: inline-block; text-align: right; min-width: max-content;">
            <form method="POST" action="/logout">
              <button type="submit" style=" padding: 4px 13px; background-color: transparent; margin-right: 20px; border: 0.5mm solid rgb(0, 0, 0); color: rgb(0, 0, 0); border-radius: 5px;">Logout</button></form>
          </div>

      <% } else{ %>
        <div class="navbar-nav" style="display: block; width: 100%">
          <a class="nav-item nav-link" href="/login" style="display: inline-block; text-align: right; min-width: auto;">Login</a>
          <a class="nav-item nav-link" href="/register" style="display: inline-block; text-align: right; min-width: auto;">Register</a>
        </div>         
      <% } %>
    </div>
  </nav>

</header>